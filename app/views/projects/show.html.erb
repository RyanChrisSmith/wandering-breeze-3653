<h1>Projects Show Page</h1>

<h3><%= @project.name %></h3>
<p>Material: <%= @project.material %></p>
<p>Challenge Theme: <%= @project.challenge.theme %></p>
<p>Number of Contestants: <%= @total_contestants %></p>
<p>Average Contestant Experience: <%= @average_experience %></p>

<%= form_with url: "/projects/#{@project.id}", method: :get do |form| %>
  <%= form.label :search, "Add a Contestant to #{@project.name}" %>
  <%= form.text_field :search %>
  <%= form.submit "Add" %>
<% end %>